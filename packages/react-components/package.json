{
  "name": "@i-review-you/react-components",
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./tailwind.css": "./dist/index.css"
  },
  "scripts": {
    "build": "tailwindcss -i ./src/tailwind.css -o ./dist/index.css",
